{
    "name": "@mashroom/mashroom-demo-remote-portal-app",
    "description": "Mashroom Demo Remote Portal App",
    "version": "1.0.1",
    "homepage": "https://www.mashroom-server.com",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=8.0.0"
    },
    "scripts": {
        "start": "pm2 start demo-remote-app-cluster.json",
        "stop": "pm2 stop demo-remote-app-cluster.json",
        "reload": "pm2 reload demo-remote-app-cluster.json",
        "dev": "cross-env NODE_ENV=development supervisor --watch src -- -r '@babel/register' src/server/index.js",
        "build": "concurrently \"npm run flow\" \"npm run lint\" \"npm run build:server\" \"npm run build:client\"",
        "build:server": "babel ./src/server -d dist/server --copy-files --ignore __tests__",
        "build:client": "webpack --config webpack.prod.js",
        "flow": "flow check",
        "lint": "eslint --ext .js --ext .jsx --fix --quiet ./src",
        "test": "jest"
    },
    "dependencies": {
        "express": "^4.17.1",
        "request": "^2.88.0",
        "pino": "^5.13.5",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "cross-env": "^6.0.3"
    },
    "devDependencies": {
        "@mashroom/mashroom": "^1.1.4",
        "@mashroom/mashroom-portal": "^1.1.4",
        "@babel/cli": "^7.6.4",
        "@babel/core": "^7.6.4",
        "@babel/preset-env": "^7.6.3",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.6.3",
        "@babel/register": "^7.6.2",
        "babel-eslint": "^10.0.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "concurrently": "^5.0.0",
        "css-loader": "^3.2.0",
        "eslint": "^6.6.0",
        "eslint-plugin-flowtype": "^4.3.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.16.0",
        "flow-bin": "^0.109.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.9.0",
        "node-sass": "^4.13.0",
        "react-hot-loader": "^4.12.15",
        "sass-loader": "^8.0.0",
        "style-loader": "^1.0.0",
        "supervisor": "^0.12.0",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-dev-middleware": "^3.7.2",
        "webpack-dev-server": "^3.9.0",
        "webpack-hot-middleware": "^2.25.0",
        "webpack-merge": "^4.2.2",
        "cross-var": "^1.1.0"
    },
    "mashroom": {
        "plugins": [
            {
                "name": "Mashroom Demo Remote Portal App",
                "type": "portal-app",
                "category": "Demo",
                "bootstrap": "startupDemoRemotePortalApp",
                "resources": {
                    "js": [
                        "index.js"
                    ]
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist/frontend",
                    "restProxies": {
                        "bff": {
                            "targetUri": "http://localhost:6086/api",
                            "sendUserHeader": true,
                            "sendPermissionsHeader": true
                        }
                    },
                    "appConfig": {}
                }
            }
        ]
    }
}
