{
    "name": "@mashroom/mashroom-demo-remote-portal-app",
    "description": "Mashroom Demo Remote Portal App",
    "version": "1.0.1",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom-demo-remote-portal-app",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=10.0.0"
    },
    "scripts": {
        "start": "pm2 start demo-remote-app-cluster.json",
        "stop": "pm2 stop demo-remote-app-cluster.json",
        "reload": "pm2 reload demo-remote-app-cluster.json",
        "dev": "cross-env NODE_ENV=development supervisor --watch src -- -r '@babel/register' src/server/index.js",
        "build": "concurrently \"npm run flow\" \"npm run lint\" \"npm run build:server\" \"npm run build:client\"",
        "build:server": "babel ./src/server -d dist/server --copy-files --ignore __tests__",
        "build:client": "webpack --config webpack.prod.js",
        "flow": "flow check",
        "lint": "eslint --ext .js --ext .jsx --fix --quiet ./src",
        "test": "jest"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "express": "^4.17.1",
        "pino": "^6.11.1",
        "request": "^2.88.2"
    },
    "devDependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "@babel/cli": "^7.13.10",
        "@babel/core": "^7.13.10",
        "@babel/preset-env": "^7.13.10",
        "@babel/preset-flow": "^7.12.13",
        "@babel/preset-react": "^7.12.13",
        "@babel/register": "^7.13.8",
        "@mashroom/mashroom": "^1.7.1",
        "@mashroom/mashroom-portal": "^1.7.1",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.6.3",
        "babel-loader": "^8.2.2",
        "concurrently": "^6.0.0",
        "cross-var": "^1.1.0",
        "css-loader": "^5.1.1",
        "eslint": "^7.21.0",
        "eslint-plugin-flowtype": "^5.3.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.22.0",
        "flow-bin": "^0.122.0",
        "html-webpack-plugin": "^4.5.2",
        "jest": "^26.6.3",
        "node-sass": "^5.0.0",
        "react-hot-loader": "^4.13.0",
        "sass-loader": "^10.1.1",
        "style-loader": "^2.0.0",
        "supervisor": "^0.12.0",
        "webpack": "^4.46.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-middleware": "^4.1.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-hot-middleware": "^2.25.0",
        "webpack-merge": "^5.7.3"
    },
    "mashroom": {
        "plugins": [
            {
                "name": "Mashroom Demo Remote Portal App",
                "type": "portal-app",
                "category": "Demo",
                "bootstrap": "startupDemoRemotePortalApp",
                "resources": {
                    "js": [
                        "index.js"
                    ]
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist/frontend",
                    "restProxies": {
                        "bff": {
                            "targetUri": "http://localhost:6086/api",
                            "sendUserHeaders": true,
                            "sendPermissionsHeader": true
                        }
                    },
                    "appConfig": {}
                }
            }
        ]
    }
}
