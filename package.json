{
    "name": "@mashroom/mashroom-demo-remote-portal-app",
    "description": "Mashroom Demo Remote Portal App",
    "version": "1.2.0",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom-demo-remote-portal-app",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start": "pm2 start demo-remote-app-cluster.json",
        "stop": "pm2 stop demo-remote-app-cluster.json",
        "reload": "pm2 reload demo-remote-app-cluster.json",
        "dev": "cross-env NODE_ENV=development supervisor --watch src -- -r 'babel-register-ts' src/server/index.ts",
        "build": "concurrently \"npm run type-check\" \"npm run lint\" \"npm run build:server\" \"npm run build:client\"",
        "build:server": "babel ./src/server -d dist/server --extensions .ts",
        "build:client": "webpack --config webpack.client.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint --ext .ts --ext .tsx --fix --quiet ./src",
        "test": "jest"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "express": "^4.17.1",
        "pino": "^6.13.0",
        "pino-pretty": "^6.0.0",
        "cross-fetch": "^3.1.4"
    },
    "devDependencies": {
        "@mashroom/mashroom": "^1.9.1",
        "@mashroom/mashroom-portal": "^1.9.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "redux": "^4.1.1",
        "react-redux": "^7.2.4",
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-typescript": "^7.15.0",
        "@babel/preset-react": "^7.14.5",
        "@babel/register": "^7.14.5",
        "babel-register-ts": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^27.0.6",
        "babel-loader": "^8.2.2",
        "concurrently": "^6.2.1",
        "cross-var": "^1.1.0",
        "css-loader": "^6.2.0",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.24.0",
        "typescript": "^4.3.5",
        "@typescript-eslint/eslint-plugin": "^4.29.1",
        "@typescript-eslint/parser": "^4.29.1",
        "@types/react": "^17.0.16",
        "@types/react-dom": "^17.0.9",
        "@types/pino": "^6.3.11",
        "@types/webpack": "^5.28.0",
        "@types/webpack-dev-middleware": "^5.0.2",
        "html-webpack-plugin": "^5.3.2",
        "jest": "^27.0.6",
        "node-sass": "^6.0.1",
        "react-hot-loader": "^4.13.0",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.2.1",
        "supervisor": "^0.12.0",
        "webpack": "^5.49.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-middleware": "^5.0.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-hot-middleware": "^2.25.0",
        "webpack-merge": "^5.8.0"
    }
}
